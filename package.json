{
  "name": "@webfill/netinfo",
  "version": "1.0.0",
  "type": "module",
  "imports": {
    "#lib/getFetchStatsSync.js": {
      "node": "./dist/lib/getFetchStatsSync.node.js",
      "default": "./dist/lib/getFetchStatsSync.default.js"
    }
  },
  "exports": {
    ".": {
      "browser": "./dist/polyfill.browser.js",
      "default": "./dist/polyfill.default.js"
    },
    "./NavigatorNetworkInformation.js": {
      "browser": "./dist/NavigatorNetworkInformation.browser.js",
      "default": "./dist/NavigatorNetworkInformation.default.js"
    },
    "./NetworkInformation.js": {
      "browser": "./dist/NetworkInformation.browser.js",
      "default": "./dist/NetworkInformation.default.js"
    },
    "./polyfill.js": {
      "browser": "./dist/polyfill.browser.js",
      "default": "./dist/polyfill.default.js"
    },
    "./ponyfill.js": {
      "browser": "./dist/ponyfill.browser.js",
      "default": "./dist/ponyfill.default.js"
    },
    "./*.js": "./dist/*.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:docs": "typedoc",
    "docs:preview": "http-server -c-1 docs",
    "format": "prettier -w .",
    "lint": "tsc --noEmit",
    "pretest": "npm run build",
    "test": "node --test"
  },
  "devDependencies": {
    "@types/node": "^20.8.4",
    "http-server": "^14.1.1",
    "prettier": "^3.0.3",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  }
}
